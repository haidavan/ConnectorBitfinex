<Window x:Class="WpfGUI.WindowsForFetchingData.CandlesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Candles" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="PairTextBox" Text="Pair" Margin="10" />
            <TextBox x:Name="PeriodTextBox" Text="Period (in seconds)" Margin="10" />
            <TextBox x:Name="FromTextBox" Text="From" Margin="10" />
            <TextBox x:Name="ToTextBox" Text="To)" Margin="10" />
            <TextBox x:Name="CountTextBox" Text="Count" Margin="10" />

            <Button Content="Get Candles" Click="GetCandlesButton_Click" Margin="10" />
            <Button Content="Subscribe Candles" Click="SubscribeCandlesButton_Click" Margin="10" />
            <Button Content="Unsubscribe Candles" Click="UnsubscribeCandlesButton_Click" Margin="10" />
        </StackPanel>
    </Grid>
</Window>
