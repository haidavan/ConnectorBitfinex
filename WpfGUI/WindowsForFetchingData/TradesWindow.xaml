<Window x:Class="WpfGUI.WindowsForFetchingData.TradesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Trades" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="PairTextBox" Text="Pair" Margin="10" />
            <TextBox x:Name="MaxCountTextBox" Text="MaxCount" Margin="10" />

            <Button Content="Get Trades" Click="GetTradesButton_Click" Margin="10" />
            <Button Content="Subscribe Trades" Click="SubscribeTradesButton_Click" Margin="10" />
            <Button Content="Unsubscribe Trades" Click="UnsubscribeTradesButton_Click" Margin="10" />
        </StackPanel>
    </Grid>
</Window>
